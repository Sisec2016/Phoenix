Source: "..\bin\skin\*"; DestDir: "{app}\skin\"; Flags: ignoreversion recursesubdirs createallsubdirs
Source: "..\bin\skins\*"; DestDir: "{app}\skins\"; Flags: ignoreversion recursesubdirs createallsubdirs

Source: "WinPcap_4_1_3.exe"; DestDir: "{app}"; Flags: ignoreversion
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[Icons]
Name: "{commonprograms}\{#MyAppName}"; Filename: "{app}\{#MyAppExeName}"
Name: "{commondesktop}\{#MyAppName}"; Filename: "{app}\{#MyAppExeName}"; Tasks: desktopicon

[Run]
Filename: "{app}\{#MyAppExeName}"; Description: "{cm:LaunchProgram,{#StringChange(MyAppName, '&', '&&')}}"; Flags: nowait postinstall skipifsilent
Filename: "{app}\WinPcap_4_1_3.exe"; Description: "Winpcap"; Flags: skipifsilent shellexec runhidden nowait postinstall hidewizard
