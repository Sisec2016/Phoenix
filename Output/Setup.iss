Source: "..\bin\DVRLited.dll"; DestDir: "{app}"; Flags: ignoreversion
Source: "..\bin\DZPLited.dll"; DestDir: "{app}"; Flags: ignoreversion
Source: "..\bin\PocoCppUnitd.dll"; DestDir: "{app}"; Flags: ignoreversion
Source: "..\bin\PocoCppUnitd.pdb"; DestDir: "{app}"; Flags: ignoreversion
Source: "..\bin\PocoDatad.dll"; DestDir: "{app}"; Flags: ignoreversion
Source: "..\bin\PocoDataODBCd.dll"; DestDir: "{app}"; Flags: ignoreversion
